<odoo>
    <data noupdate="1">
        <record id="module_category_custody_management" model="ir.module.category">
            <field name="name">Custody Management</field>
            <field name="description">User Custody Management</field>
            <field name="sequence">17</field>
        </record>

        <record id="group_custody_management_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="custody_management.module_category_custody_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="group_custody_management_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="custody_management.module_category_custody_management"/>
            <field name="implied_ids" eval="[(4, ref('custody_management.group_custody_management_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('custody_management.group_custody_management_manager'))]"/>
        </record>

        <record id="custody_company_rule" model="ir.rule">
            <field name="name">Custody Multi-Company</field>
            <field name="model_id" ref="model_custody_custody"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

        <record id="custody_user_rule" model="ir.rule">
            <field name="name">Custody: User</field>
            <field name="model_id" ref="model_custody_custody"/>
            <field name="groups" eval="[(4, ref('custody_management.group_custody_management_user'))]"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
        </record>

        <record id="custody_manager_rule" model="ir.rule">
            <field name="name">All Custody</field>
            <field name="model_id" ref="model_custody_custody"/>
            <field name="groups" eval="[(4, ref('custody_management.group_custody_management_manager'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
        </record>
    </data>
</odoo>