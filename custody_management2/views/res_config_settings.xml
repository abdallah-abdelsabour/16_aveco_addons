<odoo>
    <record id="view_custody_management_settings_form" model="ir.ui.view">
        <field name="name">view.custody.management.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" string="Custody Management" data-key="custody_management">
                    <h2>Payment</h2>
                    <div class="row mt16 o_settings_container" name="custody_payment_config">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="custody_payment_journal_id" string="Journal"/>
                                <div class="text-muted">
                                    A journal used when creating payments for custody.
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="custody_payment_journal_id" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="action_custody_management_config" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'custody_management'}</field>
    </record>
</odoo>