       <!-- Inherit Form View to Modify it -->
       <record id="edit_view_employee_form" model="ir.ui.view">
           <field name="name">hr.employee.form</field>
           <field name="model">hr.employee</field>
           <field name="inherit_id" ref="hr.view_employee_form"/>
           <field name="arch" type="xml">

               <xpath expr="//field[@name='job_id']" position="after">
                   <field name="account_journal_id" domain="[('type','in',['cash','bank'])]"/>
               </xpath>

               <xpath expr="//page[@name='personal_information']/group" position="inside">
                    <group string="Residency Info">
                        <field name="residency_num"/>
                        <field name="residency_date"/>
                    </group>
                   <group string="Passport Info">
                        <field name="passport_num"/>
                        <field name="passport_date"/>
                    </group>
                    <group string="License Info">
                        <field name="license_num"/>
                        <field name="license_date"/>
                    </group>
                   
                   
               </xpath>
               
           </field>
       </record>


